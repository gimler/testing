#!/usr/bin/env bash
set -e

if [[ "$TRAVIS" == "true" ]]; then
  export RBENV_ROOT="/home/travis/.phpenv"
  PHPUNIT_PATH=`rbenv which phpunit`
else
  PHPUNIT_PATH=`which phpunit`
fi

echo "Using PHPUnit: $PHPUNIT_PATH"

PHPUNIT_CONFIG="vendor/icecave/testing/phpunit/phpunit.coverage.xml"
if [ -f "phpunit.coverage.xml" ]; then
  PHPUNIT_CONFIG="phpunit.coverage.xml";
elif [ -f "phpunit.coverage.xml.dist" ]; then
  PHPUNIT_CONFIG="phpunit.coverage.xml.dist";
fi;

echo "Using PHPUnit Config: $PHPUNIT_CONFIG"

/usr/bin/env php \
    --define phar.readonly=0 \
    --define memory_limit=512M \
    --define apc.enabled=1 \
    --define apc.enable_cli=1 \
    --define apc.cache_by_default=0 \
    $PHPUNIT_PATH \
    --configuration $PHPUNIT_CONFIG \
    "$@"
